{
  "name": "lost-found-api",
  "version": "1.0.0",
  "description": "Lost & Found API for Red River College",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "start": "tsc && node dist/server.js",
    "build": "tsc",
    "lint": "eslint ./src --ext .ts",
    "lint:fix": "eslint ./src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "generate-docs": "ts-node src/api/v1/scripts/generate-openapi.ts && npx @redocly/cli build-docs openapi.json --output api-docs/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Lsidhu8119/lost-found-api.git"
  },
  "keywords": [],
  "author": "Lovedeep Sidhu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Lsidhu8119/lost-found-api/issues"
  },
  "homepage": "https://github.com/Lsidhu8119/lost-found-api#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.1.0",
    "firebase-admin": "^13.3.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@redocly/cli": "^1.34.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.2",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
